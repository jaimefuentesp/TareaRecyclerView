<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvDetalleMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    card_view:cardCornerRadius="6dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/cvFotoMascota"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/perrito"
            android:scaleType="centerCrop"
            android:layout_gravity="fill" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/cvIBCalificarMascota"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:src="@drawable/huesoblanco"
                android:layout_gravity="fill"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"/>
            <TextView
                android:id="@+id/cvNombreMascota"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:text="@string/nombre"
                android:layout_gravity="center_vertical"
                android:textSize="30dp"
                android:layout_marginLeft="0dp"/>
            <TextView
                android:id="@+id/cvPuntajeMascota"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/puntaje"
                android:layout_gravity="center_vertical"
                android:textSize="30dp"
                android:layout_marginLeft="0dp"/>
            <ImageButton
                android:id="@+id/cvFavotitoMascota"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:src="@drawable/huesodorado"
                android:layout_gravity="fill"
                android:scaleType="centerCrop"
                android:layout_marginLeft="0dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>